{
	"name": "vscode-php-file-link",
	"displayName": "PHP File Link",
	"description": "This extension allows to assign links to files declared as strings in the active PHP document.",
	"version": "1.0.1",
	"publisher": "pwarchol",
	"icon": "images/logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/pwarchol/vscode-php-file-link"
	},
	"keywords": [
		"php",
		"file",
		"link",
		"path"
	],
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:php"
	],
	"contributes": {
		"configuration": {
			"title": "PHP File Link",
			"properties": {
				"phpFileLink.supportedExtensions": {
					"type": "array",
					"default": [
						"php",
						"ini",
						"log"
					],
					"description": "List of file extensions that can be linked"
				},
				"phpFileLink.cacheWorkspaceFiles": {
					"type": "boolean",
					"default": true,
					"description": "Caching list of workspace files"
				},
				"phpFileLink.refreshCacheAfter": {
					"type": "integer",
					"default": 120,
					"description": "Refreshing cache after x seconds"
				}
			}
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.30.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^10.0.0",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"php-parser": "^3.1.0-beta.11"
	}
}
